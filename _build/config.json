{
    "name": "Collections"
    ,"lowCaseName": "collections"
    ,"description": "Hides resources under this container in tree. Adding grid int o the update resource panel."
    ,"author": "John Peca"
    ,"version": "3.1.0"
    ,"package":{
        "actions": [{
            "id": 1
            ,"controller": "index"
        }],
        "menus": [{
            "text": "collections.menu.collection_templates"
            ,"description": "collections.menu.collection_templates_desc"
            ,"action": 1
        }],
        "elements": {
            "plugins": [{
                "name": "Collections"
                ,"events": ["OnManagerPageInit", "OnBeforeDocFormSave", "OnResourceBeforeSort", "OnDocFormPrerender", "OnBeforeEmptyTrash", "OnDocFormRender"]
            }],
            "snippets": [{
                "name": "getSelections"
            }]

        }
        ,"systemSettings": [{
            "key": "mgr_date_format"
            ,"value": "M d"
        },{
            "key": "mgr_time_format"
            ,"value": "g:i a"
        },{
            "key": "mgr_datetime_format"
            ,"value": "M d, g:i a"
        },{
            "key": "user_js"
            ,"value": ""
        },{
            "key": "user_css"
            ,"value": ""
        },{
            "key": "mgr_tree_icon_collectioncontainer"
            ,"value": "collectioncontainer"
            ,"namespace": ""
        },{
            "key": "mgr_tree_icon_selectioncontainer"
            ,"value": "selectioncontainer"
            ,"namespace": ""
        },{
            "key": "renderer_image_path"
            ,"value": ""
            ,"namespace": ""
        }]
    }
    ,"database":{
        "tables": ["CollectionSetting", "CollectionTemplate", "CollectionTemplateColumn", "CollectionResourceTemplate", "CollectionSelection"]
    }
    ,"extensionPackage": {}
    ,"build": {
        "resolver": {
            "before": ["resolve.switchback.php"]
            ,"after": ["resolve.updatefromfirst.php", "resolve.defaulttemplate.php", "resolve.fixselections.php"]
        }
    }
}